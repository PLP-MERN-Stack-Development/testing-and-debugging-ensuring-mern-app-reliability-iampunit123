{
  "name": "mern-testing",
  "version": "1.0.0",
  "description": "MERN Stack Testing Assignment",
  "main": "index.js",
  "scripts": {
    "install-all": "cd client && npm install && cd ../server && npm install",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=\"unit\"",
    "test:integration": "jest --testPathPatterns=\"integration\"",
    "test:client": "jest --testPathPatterns=\"client/src\"",
    "test:server": "jest --testPathPatterns=\"server/tests\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose",
    "dev:client": "cd client && npm start",
    "dev:server": "cd server && npm run dev"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-jest": "^29.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.0.0",
    "jsdom": "^22.0.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "mern",
    "testing",
    "jest",
    "react",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.4"
  }
}
